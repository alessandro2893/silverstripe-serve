{
    "name": "silverstripe/serve",
    "description": "Connects the PHP development server to SilverStripe",
    "license": "MIT",
    "require": {
        "php": "^5.6||^7.0",
        "symfony/process": "^3.0",
        "silverstripe/framework": "^4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\Serve\\": "code/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "bin": [
        "bin/serve"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "phpcs --standard=PSR2 code/ bin/ tests/"
    }
}
